.basket{
  &__header{
    display: flex
    justify-content: center
    align-items center
    margin-top: 30px
    height: 100px
    position: relative
    &:after{
      content: ''
      position: absolute
      top: 49px
      right: 0px
      width: 100%
      height: 2px
      background-color black
    }
  }
  &_info{
    width: 100%
  }
  &_table{
    width: 100%
    border-collapse: collapse;
    border: 1px solid #a3a3a3;
    font-family YanoneRegular;
    &_minus{
      background-color white
      border none
      cursor: pointer
      padding-right: 25px
      font-size 25px
      transition .4s
      &:hover{
        color: #de3346
      }
      &:focus{
        box-shadow none
        outline none

      }
    }
    &_plus{
      background-color white
      border none
      padding-left: 20px
      cursor: pointer
      font-size 25px
      transition .4s
      &:focus{
        box-shadow none
        outline none

      }
      &:hover{
        color: #de3346
      }
    }
    &-active{
      position: relative
    }
    &-button{
      position: absolute
      top: -34px;
      left: 0px;
      width: 1188px;
      height: 120px;
      display: flex
      justify-content: center
      align-items center
      background-color rgba(255, 255, 255, 0.83)
    }
    tr{
      border: 1px solid #a3a3a3;
    }
    th{
      padding: 10px
      font-size 20px
      border: 1px solid #a3a3a3;
    }
    td{
      padding: 10px
      border: 1px solid #a3a3a3
      font-size 24px
      text-align center
    }
    &-close{
      font-size 45px
      transform rotate(45deg)
      text-align center
      font-family: sans-serif
      cursor: pointer
      transition .5s
      &:hover{
        color #de3346
      }
    }
    &-flex{
      display: flex
      align-items center
    }
    &-img{
      width: 200px
      height: 100px
      overflow: hidden
      margin-right: 20px
      display: flex
      justify-content: center
      align-items center
      img{
        width:100
      }
    }
  }
  &_width{
    width: 150px
  }
  &_w{
    width: 60px
  }
  &_items{
    display: flex
    align-items center
    background-color white
    z-index: 2
    position: relative
  }
  &__item{
    width: 72px
    height: 72px
    border-radius 50%
    border: 2px solid #000000;
    display: flex
    align-items center
    justify-content: center
    margin-right 20px
    position: relative
    transition .5s
    cursor: pointer
    &:after{
      content: ''
      position: absolute
      top: 33px;
      left: 100%;
      width: 23px;
      height: 2px
      background-color black
    }
    &:before{
      content: ''
      position: absolute
      top: -25px;
      left: -16px;
      background url("/static/img/basket4.png") no-repeat
      background-size 100%
      width: 43px
      opacity: 0
      height: 36px
      transition .5s
    }
    &-active{
      background-color: #de3346;
      border: 2px solid #de3346
      &:before{
        opacity: 1
      }
    }
    &:last-child{
      margin-right:0px
    }
    img{
      width: 30px
    }
  }
  &__wrapper{
    max-width: 1200px
    margin 0px auto
    margin-top: 60px
    margin-bottom: 100px
  }
  &__error{
    &-text{
      font-size: 25px;
      font-weight: 700;
      text-transform: uppercase;
      font-family YanoneRegular
    }
  }
  &__button{
    background-color: #ba1125;
    font-size: 25px;
    font-family YanoneRegular
    font-weight: 700;
    text-transform: uppercase;
    padding: 10px 45px
    color: white
    cursor: pointer
    margin-top: 20px
    border: none
    transition .4s
    &:hover{
      opacity: .8
    }
    &:disabled{
      opacity: .2
      &:hover{
        opacity: .2
      }
    }
  }
  &__total{
    margin-top: 60px
    justify-content: flex-end
    display: flex
    font-family YanoneRegular
    font-size: 25px;
    .basket__button{
      width: 100%
      transition .4s
      &:disabled{
        opacity: .2
      }
      &:hover{
        opacity: .8
      }
    }
    &-wrapper{
      width: 600px
    }
    &_count{
      display: flex
      justify-content: space-between
      padding:  0px   10px
      margin-top: 10px
      padding-bottom: 5px
      border: 2px solid #a3a3a3
    }
  }
}