.basket{
  &__header{
    display: flex
    justify-content: center
    align-items center
    margin-top: 30px
    height: 100px
    position: relative
    &:after{
      content: ''
      position: absolute
      top: 49px
      right: 0px
      width: 100%
      height: 2px
      background-color black
    }
  }
  &_items{
    display: flex
    align-items center
    background-color white
    z-index: 2
    position: relative
  }
  &__item{
    width: 72px
    height: 72px
    border-radius 50%
    border: 2px solid #000000;
    display: flex
    align-items center
    justify-content: center
    margin-right 20px
    position: relative
    transition .5s
    &:after{
      content: ''
      position: absolute
      top: 33px;
      left: 100%;
      width: 23px;
      height: 2px
      background-color black
    }
    &:before{
      content: ''
      position: absolute
      top: -25px;
      left: -16px;
      background url("/static/img/basket4.png") no-repeat
      background-size 100%
      width: 43px
      opacity: 0
      height: 36px
      transition .5s
    }
    &-active{
      background-color: #de3346;
      border: 2px solid #de3346
      &:before{
        opacity: 1
      }
    }
    &:last-child{
      margin-right:0px
    }
    img{
      width: 30px
    }
  }
  &__wrapper{
    max-width: 1200px
    margin 0px auto
    margin-top: 60px
    margin-bottom: 100px
  }
  &__error{
    &-text{
      font-size: 25px;
      font-weight: 700;
      text-transform: uppercase;
      font-family YanoneRegular
    }
  }
  &__button{
    background-color: #ba1125;
    font-size: 25px;
    font-family YanoneRegular
    font-weight: 700;
    text-transform: uppercase;
    padding: 10px 45px
    color: white
    cursor: pointer
    margin-top: 20px
    border: none
  }
}