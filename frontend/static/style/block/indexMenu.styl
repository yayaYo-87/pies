.index__menu{
  margin-top: 120px
  position: relative
  &:after{
    content: ''
    position: absolute
    top: -17px
    right: 87px
    width: 500px
    height: 400px
    background url("/static/img/menusalad.png") no-repeat
    background-size 100%
    z-index: 0
  }
  &_title{
    width: 100%
    display: flex
    justify-content: center
    align-items center
    margin-bottom: 30px
    &-text{
      font-size: 71px;
      text-align center
      color: #fefefe;
      line-height: 85px
      border-top: 4px solid white
      text-transform uppercase
    }
  }
  &_items{
    display: flex
    justify-content: center
    position: relative

  }
  &_item{
    display: flex
    flex-direction column
    margin-right: 130px

    text-align: center
    max-width: 170px
    cursor: pointer
    position: relative
    z-index:2
    &:hover{
      .index__menu_item-text{
        color: #ba1125;
      }
    }
    &-text{
      font-size: 42px;
      color: #040204;
      transition .5s
      width: 100%
    }
    &-img{
      width 170px
      display: flex
      align-items center
      justify-content: center
      height 120px
      img{
        width: 100%
        max-height: 100px
      }

    }
    &:last-child{
      margin-right: 0px
    }
  }
  &_wrapper{
    background url("/static/img/menu.png") no-repeat
    background-size cover
    height: 640px
    background-position center
    display: flex
    justify-content: center
    align-items center
    position relative
    z-index: 3
    &:after{
      content: ''
      position: absolute
      background url("/static/img/menubottom.png") no-repeat
      background-size 100%
      width: 500px
      height: 225px
      bottom: 70px
      left: calc(50% - 100px )
    }
    &:before{
      content: ''
      position: absolute
      background url("/static/img/menutop.png") no-repeat
      background-size 100%
      width: 233px
      height: 180px
      top: 47px
      left: calc(50% - 100px )
    }
  }
}

@media(max-width: 1440px) {
  .index__menu{
    &:after{
      width: 400px
      right: 30px
      top: 0px
    }
  }
  .index__menu_item{
    margin-right: 50px
    &-text{
      font-size 30px
    }
    &-img{
      width: 170px
    }
  }
}