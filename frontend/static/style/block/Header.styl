.header{
  height: 190px
  position: relative
  z-index: 100
  &:after{
    content: ''
    position: absolute
    left: 0px
    bottom: -13px
    width: 100%
    height: 16px
    background url("/static/img/icon/linebot.png")
    background-size cover
    background-repeat repeat-x
  }
  &__top{
    display flex
    justify-content: space-between
    height: 134px
  }
  &__title{
    flex:60%
    text-align center
    h1{
      font-size: 75px;
      color: #000;
      margin: 0
      line-height: 70px
      margin-top: 30px
      margin-bottom: 22px
      text-transform uppercase
    }
  }
  &__phone{
    flex: 20%
    margin-top: 65px
    padding-left: 110px
    position: relative
    &:after{
      content: ''
      position: absolute
      top: 0px
      left: 30px
      width: 64px
      height: 64px
      background url('/static/img/icon/phone.svg') no-repeat
      background-size 100%
    }
    &-text{
      font-size: 13px;
      font-family CenturyRegular
      color: #4f4f4f;
    }
    &-number{
      cursor: pointer
      font-size: 20px;
      color: #000000;
      line-height:  20px
      font-weight bold
      font-family CenturyRegular
      margin-bottom: 15px
      display: block
    }

  }
  &__basket{
    flex: 20%
    display: flex
    justify-content: flex-end;
    padding-right: 68px
    padding-top: 60px
    &__img{
      background url("/static/img/icon/basket.svg") no-repeat
      background-size 100%
      width: 64px
      height: 64px
      position: relative
      &-count{
        position: absolute
        content: ''
        top: 13px
        left: -2px
        font-size: 21px;
        font-family CenturyRegular
        font-weight bold
        width: 100%
        color: #000000;
        text-align: center
      }
    }
    &-price{
      font-size: 21px;
      font-family CenturyRegular
      font-weight: bold;
      color: #ba1125;
      margin-left: 15px
      margin-top: 14px
    }
  }
  &__items{
    display: flex
    border-top: 4px solid black
    justify-content: space-between
    max-width: 700px;
    margin: 0 auto
    .router-link-exact-active{
      color: #000000;
      cursor: default
      border-bottom:4px solid black
      &:hover{
        color: #000000

      }
    }
  }
  &__item{
    font-size: 31px;
    text-transform: uppercase;
    color: #000000;
    font-family YanoneRegular
    transition .4s
    line-height: 46px
    cursor: pointer
    border-bottom:4px solid rgba(0,0,0,0)
    &:hover{
      color: #ba1125
    }
  }

  &__mini{
    width: 100%
    height: 150px
    position: relative
    overflow: hidden;
    &_title{
      font-size: 63px;
      color: white
      text-transform uppercase
      font-weight: 700;
      font-family YanoneRegular
      position: relative
      z-index:1
      margin-top 30px
    }
    &_list{
      display: flex
      position: relative
      z-index: 1
    }
    &_item{
      font-size: 21px;
      font-family YanoneRegular
      color white
      cursor: pointer
      margin-right: 5px
      &-active{
        color: #ba1125;
        padding-left: 5px
        cursor: default
      }
    }
    &:after{
      content: ''
      position: absolute
      top: -112px;
      left: 151px;
      width: 300px
      height: 250px
      background url("/static/img/salad3.png")  no-repeat
      background-size 100%
      background-position top
      z-index: 1
    }
    &:before{
      content: ''
      position: absolute
      top: -112px;
      right: 151px;
      width: 300px
      height: 250px
      background url("/static/img/popular1.png")  no-repeat
      background-size 100%
      background-position top
      z-index: 1
    }
    &_wrapper{
      width: 100%
      display: flex
      flex-direction column
      justify-content: center
      align-items: center
      position: relative
      &:after{
        content: ''
        position: absolute
        top: 0px
        left 0px
        width: 100%
        height: 150px
        background url("/static/img/fon-min.jpg")
        background-size: 626px;
        background-position: center;
      }
    }
  }
}
