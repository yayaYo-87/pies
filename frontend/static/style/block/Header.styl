.header{
  height: 190px
  position: relative
  z-index: 100
  &:after{
    content: ''
    position: absolute
    left: 0px
    bottom: -13px
    width: 100%
    height: 16px
    background url("/static/img/icon/linebot.png")
    background-size cover
    background-repeat repeat-x
  }
  &__top{
    display flex
    justify-content: space-between
    height: 134px
  }
  &__title{
    flex:60%
    text-align center
    h1{
      font-size: 75px;
      color: #000;
      margin: 0
      line-height: 70px
      margin-top: 30px
      margin-bottom: 22px
      text-transform uppercase
    }
  }
  &__phone{
    flex: 20%
    margin-top: 65px
    padding-left: 110px
    position: relative
    &:after{
      content: ''
      position: absolute
      top: 0px
      left: 30px
      width: 64px
      height: 64px
      background url('/static/img/icon/phone.svg') no-repeat
      background-size 100%
    }
    &-text{
      font-size: 13px;
      font-family CenturyRegular
      color: #4f4f4f;
    }
    &-number{
      cursor: pointer
      font-size: 20px;
      color: #000000;
      line-height:  20px
      font-weight bold
      font-family CenturyRegular
      margin-bottom: 15px
      display: block
      transition .3s
      &:hover{
        color: #ba1125
      }
    }

  }
  &__basket{
    flex: 20%
    display: flex
    justify-content: flex-end;
    padding-right: 68px
    padding-top: 60px
    &__img{
      background url("/static/img/icon/basket.svg") no-repeat
      background-size 100%
      width: 64px
      height: 64px
      cursor: pointer
      position: relative
      &-count{
        position: absolute
        content: ''
        top: 13px
        left: -2px
        font-size: 21px;
        font-family CenturyRegular
        font-weight bold
        width: 100%
        color: #000000;
        text-align: center
      }
    }
    &-price{
      font-size: 21px;
      font-family CenturyRegular
      font-weight: bold;
      color: #ba1125;
      margin-left: 15px
      margin-top: 14px
    }
  }
  &__items{
    display: flex
    border-top: 4px solid black
    justify-content: space-between
    max-width: 700px;
    margin: 0 auto
    .router-link-exact-active{
      color: #000000;
      cursor: default
      border-bottom:4px solid black
      &:hover{
        color: #000000

      }
    }
  }
  &__item{
    font-size: 31px;
    text-transform: uppercase;
    color: #000000;
    font-family YanoneRegular
    transition .4s
    line-height: 46px
    cursor: pointer
    border-bottom:4px solid rgba(0,0,0,0)
    &:hover{
      color: #ba1125
    }
  }

  &__mini{
    width: 100%
    height: 150px
    position: relative
    overflow: hidden;
    &_title{
      font-size: 63px;
      color: white
      text-transform uppercase
      font-weight: 700;
      font-family YanoneRegular
      position: relative
      z-index:1
      margin-top 30px
    }
    &_list{
      display: flex
      position: relative
      z-index: 1
    }
    &_item{
      font-size: 21px;
      font-family YanoneRegular
      color white
      cursor: pointer
      margin-right: 5px
      &-active{
        color: #ba1125;
        padding-left: 5px
        cursor: default
      }
    }
    &:after{
      content: ''
      position: absolute
      top: -112px;
      left: 151px;
      width: 300px
      height: 250px
      background url("/static/img/salad3.png")  no-repeat
      background-size 100%
      background-position top
      z-index: 1
    }
    &:before{
      content: ''
      position: absolute
      top: -100px;
      right: 151px;
      width: 300px
      height: 250px
      background url("/static/img/popular1.png")  no-repeat
      background-size 100%
      background-position top
      z-index: 1
    }
    &_wrapper{
      width: 100%
      display: flex
      flex-direction column
      justify-content: center
      align-items: center
      position: relative
      &:after{
        content: ''
        position: absolute
        top: 0px
        left 0px
        width: 100%
        height: 150px
        background url("/static/img/fon-min.jpg")
        background-size: 626px;
        background-position: center;
      }
    }
  }
}

.basket-header{
  width: 100px
  display: flex
  justify-content: space-between
  align-items center
  position: relative
  &:hover{
    .basket-header_number{
      transform: rotateY(360deg);
    }
  }
  &_text{
    color: #464342;
    position: relative
    cursor: pointer;
    &:after{
      content ''
      position: absolute
      top: 2px
      left: -37px
      background url("/static/img/crocs.svg") no-repeat
      width: 30px
      height: 12px
    }
  }
  &_number{
    background-color: #84b923;
    border-radius 10px
    color: #fff
    width: 30px
    text-align center
    line-height: 20px
    padding-top: 2px;
    transition: transform .7s;
  }
  &__popup{
    position: relative
    width: 500px
    top: 20px
    right: 0px
    padding: 20px 20px 20px 40px
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
    background-color #ffffff
    &_wrapper{
      position: absolute
      z-index: 100
      top: 20px
      right: 0px
    }
    &:after{
      content: ''
      background-color #ffffff
      width: 20px
      height: 20px
      transform rotate(45deg)
      box-shadow: -2px -2px 3px rgba(0, 0, 0, 0.1);
      position: absolute
      top: -10px
      right: 50px
    }
    &_false{
      font-size: 18px;
      color: #464342;
      text-align center
      font-family: 'MuseoSansMedium'
    }
  }
  &__wrapper{
    .button{
      margin-top: 0px
      width: 420px
    }
  }
  &__items{
    max-height: calc(100vh - 250px)
    overflow-y: auto
    overflow-x hidden
    padding-right: 20px
  }
  &__item{
    display: flex
    padding: 10px 0px
    border-bottom: 1px solid #d8d8d8
    justify-content: space-between
    position: relative
    &-active{
      position: absolute
      width: 100%
      height: 90%
      display: flex
      justify-content: center
      align-items center
      .button{
        margin-top: 0px
        width: 200px
        position: relative
        z-index: 2
      }
      &:after{
        content: ''
        position: absolute
        z-index: 1
        background-color rgba(255, 255, 255, 0.82)
        width: 100%
        height: 100%
      }
    }
    &-close{
      cursor pointer
      position: absolute
      right: 0px
      top:-3px
      color: rgba(150, 150, 150, 0.63);
      font-family: 'MuseoSansRegular'
      font-size 30px
      transform rotate(45deg)
      transition .3s
      &:hover{
        color: rgba(150, 150, 150, 1)
      }
    }
    &-img{
      width: 110px
      display: flex
      align-items center
      justify-content center
      height: 96px
      cursor: pointer
      img{
        width: 100%
      }
    }
    &_price{
      position: relative
      width: 100px;
      text-align: right;
      margin-top: 21px
      .price_active{
        position: absolute
        right: 0px
        top: 24px
        font-size: 14px;
        &:after{
          content: ''
          position: absolute
          height: 1px
          width: 100%
          background-color: #969696;
          top: 50%
          left: 0
          transform rotate(15deg)
        }
      }
      &-current{
        color: #848484;
        font-size: 20px;
        font-family: 'MuseoSansMedium'
        display: inline-block
        float right
      }
      &-discount{
        font-size: 20px;
        color: #ca1f2a;
        font-family: 'MuseoSansMedium'
      }
    }
    &_info{
      padding-left: 20px
      width: 200px
      &-name{
        max-width: 180px
        overflow hidden
        white-space: nowrap
        text-overflow: ellipsis;
        margin-top: 20px
        color: #464342;
        line-height: 32px;
        font-size: 18px;
        font-family: 'MuseoSansMedium'
      }
      &-call{
        display: flex
        &_name{
          padding-left: 15px
          max-width: 100px
          overflow hidden
          white-space: nowrap
          text-overflow: ellipsis;
          &:first-child{
            padding-left: 0px
          }
        }
      }
    }
  }
  &__total{
    width: 100%
    display: flex
    margin-top: 10px
    margin-bottom: 20px
    justify-content: flex-end
    align-items center
    padding-right: 20px
    &-name{
      color: #969696;
      font-size: 20px;
      font-family: 'MuseoSansMedium'
      line-height: 36px
      margin-right: 15px
    }
    &-price{
      color: #464342;
      font-size: 20px;
      font-family: 'MuseoSansBold'
    }
  }
}

.popupBasket-enter-active {
  transition: all .3s ease;
}
.popupBasket-leave-active {
  transition: all .3s ease;
}
.popupBasket-enter, .popupBasket-leave-to{
  opacity: 0;
  transform translateX(30px)
}
