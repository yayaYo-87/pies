.menu{
  margin-bottom: 90px
  &__wrapper{
    max-width: 1200px
    margin: 0 auto
    margin-top: 80px
    display: flex
  }
  &__filter{
    width: 100%
    display: flex
    justify-content: space-between
    height: 80px
    align-items center
    border: 1px solid #929292;
    padding: 20px 20px 20px 30px
    &_icon{
      display: flex
      align-items center
      &-left{
        margin-right:20px
        cursor: pointer
        width: 19px
        height: 19px
      }
      &-right{
        cursor: pointer
        width: 19px
        height: 19px
      }
    }
    &_count{
      font-size: 17px;
      color: #4f4f4f;
      font-family CenturyRegular;
    }
    &_select{
      select{
        border: 1px solid #929292;
        height: 36px
        padding-left  27px
        padding-right 84px
        font-family CenturyRegular;
        font-size 17px
      }
    }
  }
  &__left{
    flex: calc(100% - 18% - 50px);
    margin-right: 50px
    max-width: 934px
  }
  &__right{
    flex: 18%
    &-title{
      font-size: 33px;
      color: #000000;
      text-transform: uppercase;
      font-family YanoneRegular
      position: relative
      margin-bottom: 35px
      &:after{
        content: ''
        position: absolute
        bottom: -10px
        height: 4px
        width: 50px
        left: 0px
        background-color: #de3346;
      }
    }
    &_search{
      position: relative
      margin-bottom: 25px
      &:after{
        content: ''
        position: absolute
        background url("/static/img/inputsearch.png") no-repeat
        background-size 100%
        width: 16px
        height: 17px
        top: 16px;
        right: 17px;
      }
      input{
        font-size: 17px;
        font-family YanoneRegular
        border: 1px solid #5c5c5d;
        padding: 14px 16px
        width: 100%
        position: relative
      }
    }
    &_item{
      font-size: 17px;
      font-family CenturyRegular;
      color: #000000;
      width: 100%
      line-height: 42px
      border-bottom: 1px solid #a3a3a3;
      cursor: pointer
      position: relative
      padding-left: 20px
      transition .3s
      &:hover{
        color: #ba1125
      }
      &:after{
        content: ''
        position: absolute
        background url("/static/img/catalogstrelka.png") no-repeat
        background-size 100%
        top: 15px
        left: 0px
        width: 8px
        height: 14px
        opacity: 1
        transition .3s
      }
      &-active{
        padding-left: 0px
        color: #ba1125
        &:after{
          opacity: 0
        }
      }
    }
  }
  &__list{
    margin-top: 35px
    display flex
    flex-wrap wrap
    &_item{
      flex 32%
      max-width: 277px;
      margin-right: 50px
      width 284px
      margin-bottom: 35px
      &:nth-child(3n + 3){
        margin-right: 0px
      }
      &:hover{
        .menu__list_hover{
          opacity:1
        }
      }
    }
    &_bottom{
      display: flex
      &-left{
        flex: 50%
      }
      &-right{
        flex: 50%
        display: flex;
        flex-direction: column;
        align-items: flex-end;
      }
    }



    &_desc{
      margin-top: 25px
      font-size: 22px;
      text-transform: uppercase;
      height: 88px;
      overflow: hidden
      text-overflow: ellipsis;
      font-weight: 700;
      color: #000000;
      padding-bottom: 10px
      border-bottom 1px solid black
      font-family CenturyRegular
    }
    &_price{
      font-size: 21px;
      font-family CenturyRegular
      font-weight: 700;
      color: #ba1125;
      padding-bottom: 11px;
      text-align: right;
      padding-top: 20px;
    }
    &_button{
      background-color: #de3346;
      font-size: 17px;
      width: 130px;
      font-weight: 700;
      font-family CenturyRegular
      color: #ffffff;
      border none
      padding: 13px 43px 13px 17px;
      cursor: pointer
      transition .3s
      position: relative
      border-radius 3px
      &:after{
        content: ''
        background url("/static/img/basketlist.svg") no-repeat
        background-size 100%
        width: 16px
        height: 16px
        position: absolute
        top: 16px;
        right: 15px;

      }
      &:hover{
        opacity: .8
      }
    }
    &_cover{
      height 234px
      overflow: hidden
      position: relative
      display: flex
      justify-content: center
      align-items center
      img{
        height: 100%
      }
    }
    &_hover{
      position: absolute
      width: 100%
      height: 100%
      top: 0px
      left: 0px
      display: flex
      flex-direction column
      transition .3s
      opacity: 0
      background-color rgba(0, 0, 0, 0.45)
      &-top{
        width: 100%
        height: 170px
        text-align center
        position: relative
        font-size: 28px;
        color: white
        padding-top: 40px
        font-family YanoneRegular
        background-color: rgba(184, 17, 37, 0);
        cursor: pointer
        &:hover{
          background-color: rgba(184, 17, 37, 0.72);

        }
        &:after{
          content: ''
          position: absolute
          top: 42px
          right: 20px
          background url("/static/img/lypa.png") no-repeat
          background-size 100%
          width: 23px
          height: 24px

        }
      }
      &-bottom{
        cursor: pointer
        font-family YanoneRegular
        font-size: 28px;
        color: white
        padding-top: 32px
        width: 100%
        height: 170px
        text-align center
        position: relative
        transition: .3s
        background-color: rgba(184, 17, 37, 0);
        &:hover{
          background-color: rgba(184, 17, 37, 0.72);

        }
        &:after{
          content: ''
          position: absolute
          top: 32px
          right: 20px
          background url("/static/img/fire.png") no-repeat
          background-size 100%
          width: 31px
          height: 31px
        }
      }
    }
  }
  &__pagination{
    display: flex
    justify-content: center
    align-items: center
    margin-top: 40px
    &_item{
      width: 44px
      margin-right: 4px
      line-height 40px
      font-size: 21px;
      color: #010101;
      border: 1px solid #000000;
      text-align: center
      font-family CenturyRegular
      transition .3s
      cursor: pointer
      &:hover{
        color: #de3346
        border: 1px solid #de3346;
      }
      &-active{
        border: 1px solid #de3346
        color: white
        background-color #de3346
        cursor: default
        &:hover{
          color: white
        }
      }
    }
  }
  &_count{
    display: flex
  }
  &_input{
    margin-top:10px
    position: relative
    &-popup{
      position: absolute
      left: 0px
      top: 37px;
      width: 131px;
      z-index 2
      transition .5s
      border-left: 1px solid #dcdcdc;
      border-right: 1px solid #dcdcdc;
      &_item{
        color: #201f1f;
        cursor: pointer
        background: #fdeeef
        padding: 0 5px;
        font-family: CenturyRegular;
        line-height: 35px;
        font-size: 18px;
        border-bottom: 1px solid #dcdcdc;
        transition .3s;
        &-active{
          background-color white
        }
        &:hover{
          background-color white
        }
      }
    }
    &-active{
      border: 1px solid #dcdcdc;
      position: relative
      font-size: 18px;
      line-height: 35px;
      border-radius 5px
      background: rgba(253, 0, 28, 0.07);
      color: #323232;
      padding-left 5px
      width: 131px;
      cursor pointer
      font-family: CenturyRegular;
      &:before{
        content: '';
        position: absolute;
        right: 0;
        border-radius 0px 5px 5px 0px
        top: 0;
        width: 33px;
        height: 100%;
        background: #fff;
        border-left: 1px solid #dcdcdc;
      }
      &:after{
        content: '';
        position: absolute;
        right: 11px;
        top: 16px;
        display: block;
        margin: 0;
        padding: 0;
        background: url('/static/img/sprite.png') no-repeat -13px -19px;
        width: 11px;
        height: 6px;
      }
      &-true{
        border-radius  5px 5px 0px 0px
        &:after{
          transform rotate(180deg)
        }
      }
    }
  }
  &_count{
    margin-top: 10px
    &-minus{
      width: 33px;
      height: 47px;
      margin: 0;
      padding: 0;
      border: 1px solid #dcdcdc;
      border-radius: 3px;
      background: #fff;
      line-height: 35px;
      text-align: center;
      cursor: pointer
      font-size: 18px;
      color: #5d1900;
      font-family CenturyRegular
      transition .3s
      &:hover{
        background-color #fef9eb
      }
      &:disabled{
        opacity: .4
        cursor: default
      }
    }
    &-plus{
      cursor: pointer
      width: 33px;
      height:47px;
      margin: 0;
      padding: 0;
      border: 1px solid #dcdcdc;
      border-radius: 3px;
      background: #fff;
      line-height: 35px;
      text-align: center;
      font-family CenturyRegular
      font-size: 18px;
      color: #5d1900;
      transition .3s
      &:hover{
        background-color #fef9eb
      }
    }
    &-count{
      width: 65px;
      height: 47px;
      margin: 0;
      padding: 2px 5px;
      border: 1px solid #dcdcdc;
      background: #fdeeef
      line-height: 41px;
      font-size: 20px;
      font-family CenturyRegular
      color: #323232;
      text-align: center;
    }
  }
}