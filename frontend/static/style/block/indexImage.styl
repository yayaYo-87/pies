.index__image{
  margin-top: 50px
  &_list{
    display: flex
    margin-top: 50px
    margin-bottom: 100px
    &-item{
      margin-right: 50px
      text-align center
      width: 300px
    }
    &-img{
      display: flex
      align-items center
      justify-content: center
      img{
        width: 58px
        height: 58px
        margin-right: 30px
      }
    }
    &-count{
      font-size: 60px;
      color: #ffffff;
      font-weight: 700;
      font-family CenturyRegular
    }
    &-text{
      font-size: 20px;
      font-family CenturyRegular
      color: white
      font-weight bold
    }
  }
  &_left{
    position: absolute
    top: 50px
    right: -400px
    text-align center
    transform rotate(-20deg)
    &-e1{
      font-size: 66px;
      color: white
      line-height: 96.63px;
    }
    &-e2{
      font-size: 112px;
      color: white
      line-height: 81.17px;
    }
    &-e3{
      font-size: 128px;
      color: #ba1125;
      line-height: 81.17px;
    }
  }
  &_right{
    position: absolute
    top: 300px
    left: -500px
    text-align right
    transform rotate(20deg)
    &-e1{
      font-size: 87px;
      color: white
      line-height: 79.48px;
    }
    &-e2{
      font-size: 72px;
      color: #ba1125;
      line-height: 79.48px;
    }
    &-e3{
      font-size: 72px;
      color: #ffffff;
      line-height: 79.48px;
    }
  }
  &_title{
    width: 100%
    display: flex
    justify-content: center
    align-items center
    margin-bottom: 50px
    position: relative
    &-bottom{
      margin-top: 50px
      flex-direction column
    }
    &-desc{
      max-width: 663px
      font-size: 25px;
      color: white
      font-family CenturyRegular
      font-weight bold
      margin-top: 20px
    }
    &:after{
      content: ''
      position: absolute
      top: -50px
      left: 0px
      width: 220px
      height: 236px
      background url("/static/img/image312.png") no-repeat
      background-size 100%
      z-index: 0
    }
    &-text{
      font-size: 71px;
      text-align center
      color: #fefefe;
      line-height: 85px
      border-top: 4px solid white
      text-transform uppercase
      position: relative
    }
  }
  &_wrapper{
    max-width: 790px
    margin: 0 auto
    display: flex
    flex-wrap wrap
    position: relative
  }
  &_item{
    width: 30.3%
    margin-right:35px
    margin-bottom 35px
    img{
      width: 100%
    }
    &:nth-child(3n + 2){
      margin-right: 0px
    }
  }
}

@media (max-width: 1680px) {
  .index__image{
    margin-top: 0px
  }
  .index__image_left{
    right: -260px
  }
  .index__image_left-e1{
    font-size 40px
    line-height: 50px

  }
  .index__image_item{
    width: 29%
  }
  .index__image_wrapper{
    max-width: 650px
  }
  .index__image_left-e2{
    font-size 60px
    line-height: 50px
  }
  .index__image_left-e3{
    font-size 80px
    line-height: 70px
  }
  .index__image_right{
    left: -340px
  }
  .index__image_right-e1{
    font-size 40px
    line-height: 50px

  }
  .index__image_right-e2{
    font-size 50px
    line-height: 50px
  }
  .index__image_right-e3{
    font-size 60px
    line-height: 70px
  }
}

@media(max-width: 1440px){
  .index__image_title-desc{
    font-size: 20px;
  }
}