.index{
  position: relative
  width: 100%
  height: 10000px
  &:after{
    content ''
    position: absolute
    top: 0px
    left: 0px
    width:  100%
    height: 100%
    background url("/static/img/fon-min.png")
    background-size 100%
    background-position center
    z-index: -1
  }
  &__title{
    width: 100%
    font-size: 112px;
    color: #ffffff;
    text-align center
    margin-bottom 20px
    span{
      font-size: 158px;
    }
  }
  &__slider{
    position: relative
    width  100%
    border-top: 6px solid #ffffff;
    border-bottom: 6px solid #ffffff
    z-index:2
    &:after{
      position: absolute
      content: ''
      width: 100%
      height: 2px
      background-color white
      top: -18px
      z-index: 2
    }
    &:before{
      position: absolute
      content: ''
      width: 100%
      height: 2px
      z-index: 2
      background-color white
      bottom: -18px
    }
    &_wrapper{
      overflow: hidden
      position: relative
      z-index: 2
      &:after{
        content ''
        background url("/static/img/stol.png")  no-repeat
        background-size cover
        background-position center center
        position: absolute
        top: -20px
        left: 0px
        height: 104%
        width: 100%
      }
    }
    .swiper-container{
      height: 780px
    }
    &_saladE{
      position: absolute
      width: 273px
      height: 217px
      top: calc(100% - 50px)
      left: 216px
      z-index: 0
      img{
        width: 100%
      }
    }
  }
}