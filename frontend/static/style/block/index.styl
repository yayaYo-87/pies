.index{
  position: relative
  width: 100%
  &:after{
    content ''
    position: absolute
    top: 0px
    left: 0px
    width:  100%
    height: 100%
    background url("/static/img/fon-min.jpg")
    background-size 626px
    background-position center
    z-index: -1
  }
  &__title{
    width: 100%
    font-size: 112px;
    color: #ffffff;
    text-align center
    margin-bottom 20px
    span{
      font-size: 158px;
    }
  }
  &__slider{
    position: relative
    width  100%
    border-top: 6px solid #ffffff;
    border-bottom: 6px solid #ffffff
    z-index:2
    &-perez{
      position: absolute
      top: -46px;
      right: 238px;
      width: 180px
      height: 130px
      background url("/static/img/perez.png") no-repeat
      background-size 100%
      z-index: 3
    }
    &-baz{
      position: absolute
      top: calc(50% - 50px );
      left: 20px;
      width: 140px
      height: 110px
      background url("/static/img/baz.png") no-repeat
      background-size 100%
      z-index: 3
    }
    &-brok{
      position: absolute
      bottom 0px
      left: 0px;
      width: 100px
      height: 200px
      background url("/static/img/brok.png") no-repeat
      background-size 100%
      z-index: 3
    }
    &-kap{
      position: absolute
      bottom -16px
      right: 100px;
      width: 300px
      height: 200px
      background url("/static/img/saladright.png") no-repeat
      background-size 100%
      z-index: 3
    }
    &:after{
      position: absolute
      content: ''
      width: 100%
      height: 2px
      background-color white
      top: -18px
      z-index: 2
    }
    &:before{
      position: absolute
      content: ''
      width: 100%
      height: 2px
      z-index: 2
      background-color white
      bottom: -18px
    }
    &_wrapper{
      overflow: hidden
      position: relative
      z-index: 2
      &:after{
        content ''
        background url("/static/img/stol.jpg")  no-repeat
        background-size cover
        background-position center center
        position: absolute
        top: -20px
        left: 0px
        height: 104%
        width: 100%
      }
    }
    .swiper-container{
      height: 780px
    }
    &_saladE{
      position: absolute
      width: 273px
      height: 217px
      top: calc(100% - 50px)
      left: 216px
      z-index: 0
      img{
        width: 100%
      }
    }
  }
}